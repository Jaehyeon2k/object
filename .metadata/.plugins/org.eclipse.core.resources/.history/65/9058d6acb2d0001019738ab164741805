package p251204생산자;

public class Buffer {
	int mdata;
	boolean empty = true;
	
	synchronized int get() {
		while(empty) {
			// 소비자는 버퍼가 비어있으면 wait하라.
			try {
				wait();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		return 0;
	}
	
	synchronized void put(int data) {
		
	}
}
